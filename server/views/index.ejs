<%- include('templates/header'); -%>

<header class="masthead">
  <div class="container" id="myHeader">
    <div class="intro-text">
      <div class="intro-lead-in">Welcome!</div>
      <div class="intro-heading text-uppercase">It all starts with you</div>
      <a class="btn btn-xl text-uppercase js-scroll-trigger" href="#services"
        >Our Services</a
      >
    </div>
  </div>
</header>

<!-- Services -->
<section class="page-section" id="services">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">Our Services</h2>
        <h3 class="section-subheading text-muted">
          We provides a full range of hair and beauty services.
        </h3>
      </div>
    </div>

    <div class="row text-center servicelist-home">
      <% servicesList.forEach(function(item){ %>
      <div class="col-md-4">
        <h4 class="service-heading"><%= item.title %></h4>
        <a href="/services/<%= item.shortname %>">
          <div
            class="position-relative d-flex justify-content-center service-item"
          >
            <div
              class="service-hover d-flex justify-content-center align-items-center"
            >
              <div class="service-hover-content">
                <i class="fas fa-plus fa-3x"></i>
              </div>
            </div>
            <img
              class="servicelist-img"
              src="img/services/<%= item.shortname %>_tn.jpg"
              alt=""
            />
          </div>
        </a>
        <p class="pt-3"><%= item.name %></p>
      </div>
      <% }) %>
    </div>
  </div>
</section>

